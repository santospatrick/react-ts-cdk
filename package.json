{
  "name": "react-ts-cdk",
  "version": "1.0.0",
  "description": "React + Typescript Boilerplate",
  "main": "index.js",
  "scripts": {
    "start": "lite-server",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "lint:tslint": "tslint -c tslint.json \"src/**/*.ts?(x)\"",
    "lint:prettier": "lint-staged",
    "precommit": "npm-run-all lint:*",
    "commit": "git add -A && git-cz",
    "semantic-release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/santospatrick/react-ts-cdk.git"
  },
  "keywords": [
    "react",
    "typescript",
    "cdk"
  ],
  "author": "Patrick Santos (http://santospatrick.github.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/santospatrick/react-ts-cdk/issues"
  },
  "homepage": "https://github.com/santospatrick/react-ts-cdk#readme",
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.17",
    "@storybook/addon-links": "^3.2.17",
    "@types/enzyme": "^3.1.6",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/jest": "^21.1.9",
    "@types/react": "^16.0.31",
    "@types/react-dom": "^16.0.3",
    "@types/sinon": "^4.1.2",
    "@types/storybook__react": "^3.0.5",
    "awesome-typescript-loader": "^3.4.1",
    "codecov.io": "^0.1.6",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "danger": "^2.1.6",
    "husky": "^0.14.3",
    "jest": "^22.0.3",
    "lint-staged": "^6.0.0",
    "lite-server": "^2.3.0",
    "npm-run-all": "^4.1.2",
    "prettier": "1.9.2",
    "semantic-release": "^12.2.2",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "@storybook/react": "^3.2.17",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "sinon": "^4.1.3"
  },
  "jest": {
    "mapCoverage": true,
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFiles": [
      "./setup.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
